include ../../../mixins/index

+b.section.--join.SECTION 
  +b.bg-image.IMG(
      src= ('../../static/img/backgroundJoin.png')
      alt= "Background"
    )
  +b.g-container--fit_sm-sm.--fit_md-md.--fit_lg-lg.--fit_xl-xl
    +b.form-border
      +b.form-wrapper 
        +b.subtitle.--join.H2 Join our  mailing list
        +b.form.--join.js-form#form.FORM(
          data-action= 'https://httpbin.org/post',
          data-method= 'POST',
          novalidate
        )
          +b.field.--join.INPUT(
            type= 'email',
            name= 'email',
            data-rule= 'required|email'
          )
          +b.btn.--join.all-buttons.BUTTON(
            type= 'submit'
          ) 
            +b.text.P join
            +b.image.IMG(
              src= ('../../static/img/icon/arrowRight.png'),
              alt= "arrow"
            )