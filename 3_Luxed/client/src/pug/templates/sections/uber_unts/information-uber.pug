      +b.image.--bg.IMG(
        src= ('../../static/img/bigx.png')
      )
      each element in textWrapper
        +text-wrapper(element)
    +b.text.--section-name.P PICTURE COMPANY
    +b.pic-wrapper.g-row.g-row--appearance_spaced
      +b.pic.g-cell.g-cols.g-cols--12-xs.g-cols--6-md.g-cols--3-lg
